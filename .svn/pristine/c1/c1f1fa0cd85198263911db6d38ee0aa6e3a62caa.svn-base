drct-playlist-info-panel-vcc {
	display: block;
}


@require '../../AppVcc/AppVcc_styleLib.styl'

$myVariants = '.PlaylistInfoPanelVcc'
$myElders = ''


{$myElders}
	{$myVariants}
	
		.detailSection
			
			/* Layout */
			margin-top: -20px;
			padding-top: 30px;
			padding-bottom: 30px; 
		
			/* Style */
			background-color: $AppVcc_bigPanelBgColor


		.primayZone_in_detail

			/* Layout */
			width: 100%
			margin-bottom: 0



		.parentLink_in_detail
			/* Layout */
			margin-bottom: 5px
			padding: 1px
		
			/* Style */
			{$AppVcc_detailParentLink}
			

		.header_in_detail
			/* Flex-box spcf */
			display: flex;
			flex-direction: column;

			/* Layout */
			border__: solid 1px orange		
		
		.billboardImg_in_detail
			/* Flex-child spcf */
			order: 10;
		
			/* Layout */
			width: 100%
			height: 20vw;
			
			/* Style */
			border-bottom: solid 2px black

		.logo_in_detail
			/* Flex-child spcf */
			order: 10;
			
			/* Layout */
			width: 14vw
			height: 14vw

			min-width: 115px
			min-height: 115px
			
			/* Style */
			{$AppVcc_detailLogoBorder}

			
			
		.headerContent_in_detail
			/* Flex-child spcf */
			order: 20;
		
			/* Flex-box spcf */
			display: flex;
			flex-direction: row;
			justify-content: space-between;
			
			/* Layout */
			width: 100%
			padding-left: 10px
			padding-right: 0
			
			/* Style */
			border__: solid 1px orange

		@media $AppVcc_stndXSmMinBreakpoint  {
			.headerContent_in_detail {

				/* Layout */
				padding-left: 10vw
				padding-right: 10vw
			}
		}

		.primaryZone_in_headerContent_in_detail
			/* Flex-child spcf */
			order: 20;
			flex: 1;

			/* Flex-box spcf */
			display: flex;
			flex-direction: column;

			/* Layout */
			padding: 1vw 10px 1vw 15px;


			/* Style */
			border_: solid 2px red


		@media $AppVcc_stndXSmMinBreakpoint  {
			.primaryZone_in_headerContent_in_detail {

				/* Layout */
				padding: 1vw 20px 1vw 20px;
			}
		}
		

		.heading_in_detail
			/* Flex-child spcf */
			order: 20;
			
			/* Flex-box spcf */
			display: flex;
			flex-direction: column;
			justify-content: center;
			
			/* Layout */
			margin-bottom: 15px;
			width: 100%
			
			/* Style */
			{ $AppVcc_detailTitle }


		.horizontalDashboard_in_detail
			/* Flex-child spcf */
			order: 20;

			/* Flex-box spcf */
			display: flex;
			flex-direction: row;

			/* Style */
			border__: solid 1px blue


		.episodeMeta_in_detail
			/* Flex-child spcf */
			order: 10;

			/* Flex-box spcf */
			display: flex;
			flex-direction: column;

			/* Layout */
			margin-right: 10px
			padding-right: 10px
			border-right: $AppVcc_stndMdGreyBorder;


		.episodeMetaLabel_in_detail
			/* Flex-child spcf */
			order: 20;
			
			/* Style */
			{$AppVcc_detailStatNvpFlipLabel}

		.episodeMetaCopy_in_detail
			/* Flex-child spcf */
			order: 10;		

			/* Layout */
			margin-bottom: 3px
			
			/* Style */
			{$AppVcc_detailStatNvpFlipValue}



		.durationMeta_in_detail
			/* Flex-child spcf */
			order: 20;
			
			/* Flex-box spcf */
			display: flex;
			flex-direction: column;

		.durationMetaLabel_in_detail
			/* Flex-child spcf */
			order: 20;
			
			/* Style */
			{$AppVcc_detailStatNvpFlipLabel}

		.durationMetaCopy_in_detail
			/* Flex-child spcf */
			order: 10;	
			
			/* Layout */
			margin-bottom: 3px
			
			/* Style */
			{$AppVcc_detailStatNvpFlipValue}



		.verticalDashboardRight_in_detail
			/* Flex-child spcf */
			order: 30;

			/* Flex-box spcf */
			display: flex;
			flex-direction: column;
			justify-content: flex-start;

			/* Layout */
			padding: 30px 0px 5px 10px

			/* Style */
			border__: solid 1px blue

		@media $verticalDashboardRight_in_detail  {
			.primaryZone_in_headerContent_in_detail {

				/* Layout */
				padding: 30px 10px 5px 10px
			}
		}
			
		.descriptionZone_in_detail
			/* Flex-child spcf */
			order: 20;

			/* Flex-box spcf */
			display: flex;
			flex-direction: column;
			justify-content: center;
			
			/* Layout */
			padding: 20px 10px 0 10px
			max-height: 270px
			
			/* Style */
			border__: solid 1px blue
			
			
		@media $AppVcc_stndXSmMinBreakpoint  {
			.descriptionZone_in_detail {

				/* Layout */
				padding: 20px 10vw 0 10vw
			}
		}
				
		.descriptionCopy_in_detail
			/* Flex-child spcf */
			order: 10;

			/* Layout */
			display: block

			/* Style */
			{$AppVcc_detailDescText}	

			/* Layout addition for ellipses */
			/* ...Ref: http://joelsaupe.com/programming/multiple-line-ellipsis-css/ */
			/* NOT USED NOW ...
			display: block;
			height: 34px
			width: 100%
			
			display: -webkit-box;
			-webkit-line-clamp: 2;
			-webkit-box-orient: vertical;
			overflow: hidden;
			text-overflow: ellipsis;
			*/


		.listings_in_detail
			border__: solid 1px green
		
			
