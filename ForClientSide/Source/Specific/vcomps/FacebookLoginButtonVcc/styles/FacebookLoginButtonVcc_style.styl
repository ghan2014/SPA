drct-facebook-login-button-vcc {
	display: block;
}


@require '../../AppVcc/AppVcc_styleLib.styl'

$myVariants = '.FacebookLoginButtonVcc'
$myElders = ''

{$myElders}
	{$myVariants}
		/* Layout */
		width: 100%
		height: 34px
		
		/* Style */
		
		
		.FacebookLoginButton
			/* Layout */
			height: 34px
			width: 100%

			/* Style */
			background-color: $AppVcc_fbBlue;
			border: solid 1px $AppVcc_fbBlue;
			border-radius: 4px;

		.buttonCopy
			/* Layout */
			display: block
			margin: 0 auto;

			/* Style */
			{$AppVcc_sprite-btn_loginFB_nobg}
			
			
	drct-facebook-login-button-vcc.SignupMode
		{$myVariants}
		
		.buttonCopy
			/* Style */
			{$AppVcc_sprite-btn_signupFB_nobg}
			
		
